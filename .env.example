# ZMDB Live 环境变量配置示例
# 复制此文件为 .env 并根据实际情况修改配置

# 数据库配置
DB_PATH=./db/zmdb.db

# 服务端口配置
BACKEND_PORT=4000
FRONTEND_PORT=3000
TOOL_PORT=5000

# JWT 配置
JWT_SECRET=zmdb-live-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# B站 API 配置
BILIBILI_COOKIE=
BILIBILI_API_URL=https://api.bilibili.com

# 文件上传配置
MAX_FILE_SIZE=104857600
UPLOAD_DIR=./tmp

# 推送通知配置（可选）
PUSHDEER_KEY=
PUSH_ENABLED=false

# FFmpeg 配置
FFMPEG_PATH=ffmpeg
SEGMENT_DURATION=10

# 开发环境配置
NODE_ENV=development
LOG_LEVEL=info
